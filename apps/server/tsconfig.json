{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["../../packages/shared/src"],
      "@shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": [
    "src"
  ]
}
